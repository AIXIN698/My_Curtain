<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7B52C5"
    tools:context=".direct_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="智能窗帘控制系统"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_height="160dp">
                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/code_car_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="3dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="12sp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:background="#7B52C5"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="温度"
                                        android:layout_marginTop="12dp"
                                        android:textSize="14sp"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="湿度"
                                        android:layout_marginTop="12dp"
                                        android:textSize="14sp"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="光强"
                                        android:layout_marginTop="12dp"
                                        android:textSize="14sp"
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/dir_tv_2"
                                        android:layout_width="wrap_content"
                                        android:text="26.4 ℃"
                                        android:textSize="22sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="22dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="45 %"
                                        android:textSize="22sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="22dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/dir_tv_5"
                                        android:layout_width="wrap_content"
                                        android:text="0    lx"
                                        android:textSize="22sp"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="22dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="12sp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:background="#7B52C5"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="窗帘状态"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:typeface="serif"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:text="Intelligent curtain control system"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/dir_tv_1"
                                android:layout_width="wrap_content"
                                android:text="开启"
                                android:textSize="30sp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:padding="5dp"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="MQTT:"
                                    android:textSize="12sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/dir_tv_3"
                                    android:layout_width="wrap_content"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="WIFI:"
                                    android:textSize="12sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="220dp"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/dir_tv_4"
                                    android:layout_width="wrap_content"
                                    android:text="等待连接"
                                    android:textSize="12sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="12sp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            app:cardCornerRadius="25dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:background="#3F51B5"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="模式选择: "
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:layout_height="wrap_content"/>
                                    <Spinner
                                        android:id="@+id/spinner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </Spinner>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="50dp"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:id="@+id/dir_btn_1"
                                        android:layout_width="70dp"
                                        android:src="@drawable/kai_1"
                                        android:background="#00000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:layout_height="70dp"/>
                                    <ImageButton
                                        android:id="@+id/dir_btn_2"
                                        android:layout_width="70dp"
                                        android:src="@drawable/guan_3"
                                        android:layout_marginLeft="10dp"
                                        android:background="#00000000"
                                        android:layout_weight="1"
                                        android:layout_height="70dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="开启"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="关闭"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>